					<form id="poll-form" method="post">
						<ul class="poll-answers">
						<?php $answerCounter = 0; ?>
						<?php foreach ($answers as $answer) : ?>

							<?php
							$answerClasses = 'answer';
							if ($answerCounter % 2 == 0) {
								$answerClasses .= ' ';
								$answerClasses .= 'even';
							} else {
								$answerClasses .= ' ';
								$answerClasses .= 'odd';
							};
							if ($answerCounter == 0) {
								$answerClasses .= ' ';
								$answerClasses .= 'first';
							};
							if ($answerCounter == count($answers)) {
								$answerClasses .= ' ';
								$answerClasses .= 'last';
							};
							?>
